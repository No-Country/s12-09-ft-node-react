{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "overrides": [
        {
          "env": {
            "node": true
          },
          "files": [
            ".eslintrc.{js,cjs}"
          ],
          "parserOptions": {
            "sourceType": "script"
          }
        }
      ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-trailing-spaces": "error", // Sin espacios al final de línea
        "no-multiple-empty-lines": ["error", { "max": 1 }] // Máximo de 1
    }
}
